        <style>
            /* Enhanced Student Attendance System CSS */
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

    :root {
        --primary-blue: #1e40af;
        --primary-light: #3b82f6;
        --primary-lighter: #60a5fa;
        --primary-lightest: #93c5fd;
        --success-green: #059669;
        --success-light: #10b981;
        --danger-red: #dc2626;
        --danger-light: #ef4444;
        --warning-orange: #d97706;
        --warning-light: #f59e0b;
        --info-purple: #7c3aed;
        --info-light: #8b5cf6;
        --gray-50: #f8fafc;
        --gray-100: #f1f5f9;
        --gray-200: #e2e8f0;
        --gray-400: #94a3b8;
        --gray-600: #475569;
        --gray-700: #334155;
        --gray-800: #1e293b;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        --border-radius-sm: 8px;
        --border-radius-md: 12px;
        --border-radius-lg: 16px;
        --border-radius-xl: 20px;
        --border-radius-2xl: 24px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #e0f2fe 0%, #b3e5fc 25%, #81d4fa 50%, #4fc3f7 75%, #29b6f6 100%);
        min-height: 100vh;
        padding: 20px;
        color: var(--primary-blue);
        font-weight: 400;
        line-height: 1.6;
        position: relative;
        overflow-x: hidden;
    }

    /* Animated background particles */
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.05) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(139, 92, 246, 0.05) 0%, transparent 50%);
        z-index: -1;
        animation: floatingParticles 20s ease-in-out infinite;
    }

    @keyframes floatingParticles {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        33% { transform: translateY(-10px) rotate(2deg); }
        66% { transform: translateY(10px) rotate(-2deg); }
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.97);
        border-radius: var(--border-radius-2xl);
        box-shadow: var(--shadow-2xl), 0 0 0 1px rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        animation: containerSlideIn 0.8s ease-out;
    }

    @keyframes containerSlideIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .header {
        background: linear-gradient(135deg, #1e40af 0%, #3b82f6 30%, #60a5fa 60%, #93c5fd 100%);
        padding: 50px 40px;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: 
            radial-gradient(circle at 30% 20%, rgba(255,255,255,0.15) 0%, transparent 50%),
            radial-gradient(circle at 70% 80%, rgba(255,255,255,0.1) 0%, transparent 50%);
        animation: headerFloat 8s ease-in-out infinite;
        pointer-events: none;
    }

    .header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, 
            rgba(255,255,255,0.3) 0%, 
            rgba(255,255,255,0.6) 50%, 
            rgba(255,255,255,0.3) 100%);
    }

    @keyframes headerFloat {
        0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
        50% { transform: translateY(-20px) rotate(180deg) scale(1.05); }
    }

    .header h1 {
        font-size: 3rem;
        margin-bottom: 15px;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.3), 0 0 20px rgba(255,255,255,0.2);
        font-weight: 800;
        position: relative;
        z-index: 1;
        letter-spacing: -0.025em;
        animation: titlePulse 3s ease-in-out infinite;
    }

    @keyframes titlePulse {
        0%, 100% { text-shadow: 2px 2px 8px rgba(0,0,0,0.3), 0 0 20px rgba(255,255,255,0.2); }
        50% { text-shadow: 2px 2px 8px rgba(0,0,0,0.3), 0 0 30px rgba(255,255,255,0.4); }
    }

    .header p {
        font-size: 1.4em;
        opacity: 0.95;
        font-weight: 500;
        position: relative;
        z-index: 1;
        letter-spacing: 0.025em;
    }

    .main-content {
        padding: 60px 50px;
    }

    /* Subject Management Section */
    .subject-management {
        background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);
        padding: 40px;
        border-radius: var(--border-radius-xl);
        margin-bottom: 40px;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(59, 130, 246, 0.1);
        position: relative;
        overflow: hidden;
    }

    .subject-management::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-light), var(--primary-lighter), var(--primary-lightest));
    }

    .subject-controls {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .subject-add-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .form-group-inline {
        display: grid;
        grid-template-columns: 1fr 2fr auto;
        gap: 15px;
        align-items: end;
    }

    .subject-selector {
        display: flex;
        gap: 15px;
        align-items: end;
    }

    .subject-selector select {
        min-height: 55px;
        flex: 1;
    }

    .btn-subject {
        background: linear-gradient(135deg, var(--success-green) 0%, var(--success-light) 100%);
        white-space: nowrap;
        min-width: 160px;
    }

    .btn-subject:hover {
        box-shadow: 0 8px 25px rgba(5, 150, 105, 0.4);
    }

    .control-panel {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-bottom: 50px;
    }

    .add-student-form, .grade-selector, .data-management {
        background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);
        padding: 40px;
        border-radius: var(--border-radius-xl);
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(59, 130, 246, 0.1);
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .data-management {
        grid-column: 1 / -1;
        margin-top: 40px;
    }

    .add-student-form:hover, .grade-selector:hover, .data-management:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-xl);
    }

    .add-student-form::before, .grade-selector::before, .data-management::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
    }

    .add-student-form::before {
        background: linear-gradient(90deg, var(--primary-light), var(--primary-lighter), var(--primary-lightest));
    }

    .grade-selector::before {
        background: linear-gradient(90deg, #06b6d4, #0891b2, #0e7490);
    }

    .data-management::before {
        background: linear-gradient(90deg, var(--success-green), var(--warning-orange), var(--danger-red));
    }

    /* Toggle Forms */
    .toggle-forms {
        display: flex;
        margin-bottom: 25px;
        border-radius: var(--border-radius-md);
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }

    .toggle-btn {
        flex: 1;
        padding: 12px 20px;
        background: var(--gray-100);
        border: none;
        cursor: pointer;
        font-weight: 600;
        color: var(--gray-600);
        transition: all 0.3s ease;
    }

    .toggle-btn.active {
        background: var(--primary-light);
        color: white;
        box-shadow: var(--shadow-md);
    }

    .toggle-btn:hover:not(.active) {
        background: var(--gray-200);
    }

    /* Form Visibility */
    .single-add-form, .bulk-add-form {
        display: none;
        animation: formSlideIn 0.3s ease-out;
    }

    .single-add-form.active, .bulk-add-form.active {
        display: block;
    }

    @keyframes formSlideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Data Management Controls */
    .data-controls {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-import {
        background: linear-gradient(135deg, var(--info-purple) 0%, var(--info-light) 100%);
    }

    .btn-import:hover {
        box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
    }

    .form-title {
        font-size: 1.6em;
        font-weight: 700;
        color: var(--primary-blue);
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 12px;
        position: relative;
    }

    .form-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-light), var(--primary-lighter));
        border-radius: 2px;
    }

    .form-group {
        margin-bottom: 25px;
        animation: formGroupSlideIn 0.6s ease-out;
    }

    @keyframes formGroupSlideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    label {
        display: block;
        margin-bottom: 12px;
        font-weight: 600;
        color: var(--primary-blue);
        font-size: 0.95em;
        letter-spacing: 0.025em;
    }

    input[type="text"], input[type="file"], select, textarea {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid var(--gray-200);
        border-radius: var(--border-radius-md);
        font-size: 16px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
        color: var(--primary-blue);
        font-family: inherit;
        box-shadow: var(--shadow-sm);
    }

    input[type="text"]:focus, select:focus, textarea:focus {
        outline: none;
        border-color: var(--primary-light);
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1), var(--shadow-md);
        background: var(--gray-50);
        transform: translateY(-1px);
    }

    input[type="text"]:hover, select:hover, textarea:hover {
        border-color: var(--primary-lighter);
        box-shadow: var(--shadow-md);
    }

    textarea {
        resize: vertical;
        min-height: 140px;
        font-family: inherit;
        line-height: 1.6;
    }

    .btn {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-light) 100%);
        color: white;
        padding: 16px 32px;
        border: none;
        border-radius: var(--border-radius-md);
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: var(--shadow-lg);
        letter-spacing: 0.025em;
        position: relative;
        overflow: hidden;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.6s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-xl);
    }

    .btn:active {
        transform: translateY(-1px);
        box-shadow: var(--shadow-lg);
    }

    .btn-danger {
        background: linear-gradient(135deg, var(--danger-red) 0%, var(--danger-light) 100%);
        box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
    }

    .btn-danger:hover {
        box-shadow: 0 8px 25px rgba(220, 38, 38, 0.4);
    }

    .btn-secondary {
        background: linear-gradient(135deg, var(--gray-600) 0%, var(--gray-400) 100%);
        box-shadow: 0 4px 15px rgba(100, 116, 139, 0.3);
    }

    .btn-secondary:hover {
        box-shadow: 0 8px 25px rgba(100, 116, 139, 0.4);
    }

    .btn-export {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        font-size: 18px;
        padding: 18px 36px;
    }

    .btn-export:hover {
        box-shadow: 0 8px 25px rgba(5, 150, 105, 0.4);
    }

    .btn-small {
        padding: 10px 18px;
        font-size: 14px;
        margin: 3px;
    }

    .grade-tabs {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 25px;
    }

    .tab-button {
        padding: 20px 24px;
        background: white;
        border: 2px solid var(--gray-200);
        border-radius: var(--border-radius-lg);
        cursor: pointer;
        font-size: 15px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: var(--gray-600);
        text-align: center;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }

    .tab-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
        transition: left 0.6s ease;
    }

    .tab-button:hover::before {
        left: 100%;
    }

    .tab-button:hover {
        border-color: var(--primary-light);
        color: var(--primary-blue);
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
    }

    .tab-button.active {
        background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-lighter) 100%);
        color: white;
        border-color: var(--primary-light);
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
    }

    /* Current Info Section */
    .current-info {
        background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-lighter) 100%);
        color: white;
        padding: 25px 30px;
        border-radius: var(--border-radius-lg);
        margin-bottom: 30px;
        box-shadow: var(--shadow-lg);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        animation: infoSlideDown 0.5s ease-out;
    }

    @keyframes infoSlideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .info-label {
        font-size: 0.9em;
        opacity: 0.9;
        font-weight: 500;
    }

    .info-item span:last-child {
        font-weight: 700;
        font-size: 1.1em;
    }

    .students-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .student-card {
        background: white;
        border: 2px solid var(--gray-200);
        border-radius: var(--border-radius-xl);
        padding: 30px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--shadow-md);
        position: relative;
        overflow: hidden;
        animation: cardSlideUp 0.6s ease-out;
    }

    @keyframes cardSlideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .student-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-light), var(--primary-lighter), var(--primary-lightest));
    }

    .student-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-xl);
        border-color: var(--primary-light);
    }

    .student-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .student-name {
        font-size: 1.4em;
        font-weight: 700;
        color: var(--primary-blue);
        flex-grow: 1;
        letter-spacing: -0.025em;
    }

    .student-actions {
        display: flex;
        gap: 10px;
    }

    .status-time {
        font-size: 0.9em;
        color: var(--gray-600);
        font-weight: 600;
        margin-top: 12px;
        padding: 12px 16px;
        background: rgba(148, 163, 184, 0.08);
        border-radius: var(--border-radius-md);
        text-align: center;
        border: 1px solid rgba(148, 163, 184, 0.15);
        transition: all 0.3s ease;
        animation: statusTimeAppear 0.4s ease-out;
    }

    @keyframes statusTimeAppear {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .status-time.present {
        background: rgba(5, 150, 105, 0.08);
        color: #065f46;
        border-color: rgba(5, 150, 105, 0.2);
    }

    .status-time.absent {
        background: rgba(220, 38, 38, 0.08);
        color: #991b1b;
        border-color: rgba(220, 38, 38, 0.2);
    }

    .status-time.late {
        background: rgba(217, 119, 6, 0.08);
        color: #92400e;
        border-color: rgba(217, 119, 6, 0.2);
    }

    .status-time.leave {
        background: rgba(124, 58, 237, 0.08);
        color: #6b21a8;
        border-color: rgba(124, 58, 237, 0.2);
    }

    .status-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .status-btn {
        padding: 14px 18px;
        border: 2px solid;
        border-radius: var(--border-radius-md);
        background: white;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }

    .status-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
        transition: left 0.6s ease;
    }

    .status-btn:hover::before {
        left: 100%;
    }

    .status-btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .status-btn.present {
        border-color: var(--success-green);
        color: var(--success-green);
    }

    .status-btn.present.active {
        background: linear-gradient(135deg, var(--success-green) 0%, var(--success-light) 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(5, 150, 105, 0.3);
    }

    .status-btn.absent {
        border-color: var(--danger-red);
        color: var(--danger-red);
    }

    .status-btn.absent.active {
        background: linear-gradient(135deg, var(--danger-red) 0%, var(--danger-light) 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
    }

    .status-btn.late {
        border-color: var(--warning-orange);
        color: var(--warning-orange);
    }

    .status-btn.late.active {
        background: linear-gradient(135deg, var(--warning-orange) 0%, var(--warning-light) 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(217, 119, 6, 0.3);
    }

    .status-btn.leave {
        border-color: var(--info-purple);
        color: var(--info-purple);
    }

    .status-btn.leave.active {
        background: linear-gradient(135deg, var(--info-purple) 0%, var(--info-light) 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(124, 58, 237, 0.3);
    }

    .summary {
        background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);
        padding: 45px;
        border-radius: var(--border-radius-xl);
        margin-top: 50px;
        text-align: center;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(59, 130, 246, 0.1);
        position: relative;
        overflow: hidden;
        animation: summarySlideUp 0.8s ease-out;
    }

    @keyframes summarySlideUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .summary::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--success-green), var(--warning-orange), var(--danger-red), var(--info-purple));
    }

    .summary h3 {
